{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"lock": false,
	"nodeModulesDir": true,
	"unstable": ["webgpu"],
	"npmRegistry": "https://npm.pkg.github.com",
	"test": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"tasks": {
		"dev": "deno run -A npm:vite dev",
		"build": "svelte-kit sync && pnpm package",
		"build:watch": "svelte-kit sync && pnpm package --watch",
		"package": "svelte-kit sync && svelte-package && NODE_ENV=production postcss src/app.css -o dist/asha.css && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "deno lint",
		"format": "deno fmt",
		"storybook": "deno run -A npm:storybook dev -p 6006",
		"build-storybook": "deno run -A npm:storybook build",
		"release": "changeset publish"
	},
	"imports": {
		"@babel/core": "https://esm.sh/@babel/core@7.24.7",
		"@chromatic-com/storybook": "https://esm.sh/@chromatic-com/storybook@1.5.0",
		"@storybook/addon-actions": "https://esm.sh/@storybook/addon-actions@8.1.10",
		"@storybook/addon-essentials": "https://esm.sh/@storybook/addon-essentials@8.1.10",
		"@storybook/addon-links": "https://esm.sh/@storybook/addon-links@8.1.10",
		"@storybook/addon-styling": "https://esm.sh/@storybook/addon-styling@1.3.7",
		"@storybook/addon-svelte-csf": "https://esm.sh/@storybook/addon-svelte-csf@4.1.3",
		"@storybook/addon-viewport": "https://esm.sh/@storybook/addon-viewport@8.1.10",
		"@storybook/svelte": "https://esm.sh/@storybook/svelte@8.1.10",
		"@storybook/sveltekit": "https://esm.sh/@storybook/sveltekit@8.1.10",
		"@sveltejs/adapter-auto": "https://esm.sh/@sveltejs/adapter-auto@3.2.1",
		"@sveltejs/kit": "https://esm.sh/@sveltejs/kit@2.5.10",
		"@sveltejs/package": "https://esm.sh/@sveltejs/package@2.3.1",
		"@sveltejs/vite-plugin-svelte": "https://esm.sh/@sveltejs/vite-plugin-svelte@3.1.1",
		"@tailwindcss/line-clamp": "https://esm.sh/^0.4.4",
		"@tsconfig/svelte": "https://esm.sh/@tsconfig/svelte@5.0.4",
		"@types/youtube": "https://esm.sh/@types/youtube@0.0.50",
		"@typescript-eslint/eslint-plugin": "https://esm.sh/@typescript-eslint/eslint-plugin@7.13.0",
		"@typescript-eslint/parser": "https://esm.sh/@typescript-eslint/parser@7.13.0",
		"@xstate/cli": "https://esm.sh/@xstate/cli@0.5.17",
		"@xstate/svelte": "https://esm.sh/@xstate/svelte@3.0.3",
		"@xstate/test": "https://esm.sh/@xstate/test@0.5.1",
		"autoprefixer": "https://esm.sh/autoprefixer@10.4.19",
		"babel-loader": "https://esm.sh/babel-loader@9.1.3",
		"cssnano": "https://esm.sh/cssnano@7.0.2",
		"eslint": "https://esm.sh/eslint@9.4.0",
		"eslint-config-prettier": "https://esm.sh/eslint-config-prettier@9.1.0",
		"eslint-plugin-storybook": "https://esm.sh/eslint-plugin-storybook@0.8.0",
		"eslint-plugin-svelte3": "https://esm.sh/eslint-plugin-svelte3@4.0.0",
		"postcss": "https://esm.sh/postcss@8.4.38",
		"postcss-cli": "https://esm.sh/postcss-cli@11.0.0",
		"prettier": "https://esm.sh/prettier@3.3.2",
		"prettier-plugin-svelte": "https://esm.sh/prettier-plugin-svelte@3.2.4",
		"publint": "https://esm.sh/publint@0.2.8",
		"react": "https://esm.sh/react@18.3.1",
		"react-dom": "https://esm.sh/react-dom@18.3.1",
		"storybook": "https://esm.sh/storybook@8.1.10",
		"svelte": "https://esm.sh/svelte@5.0.0-next.165",
		"svelte-adapter-deno": "https://esm.sh/svelte-adapter-deno@0.9.0",
		"svelte-check": "https://esm.sh/svelte-check@3.8.2",
		"svelte-loader": "https://esm.sh/svelte-loader@3.2.3",
		"svelte-preprocess": "https://esm.sh/svelte-preprocess@6.0.1",
		"svelte2tsx": "https://esm.sh/svelte2tsx@0.7.9",
		"tailwindcss": "https://esm.sh/tailwindcss@3.4.4",
		"tslib": "https://esm.sh/tslib@2.6.3",
		"typescript": "https://esm.sh/typescript@5.5.2",
		"vite": "https://esm.sh/vite@5.3.1",
		"vitest": "https://esm.sh/vitest@1.6.0",
		"xstate": "https://esm.sh/xstate@5.14.0"
	},
	"exclude": ["dist/"]
}
