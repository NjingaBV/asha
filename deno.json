{
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", ".storybook"]
  },
  "lint": {
    "include": ["src/", ".storybook"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "nodeModulesDir": true,
  "lock": false,
  "tasks": {
    "dev": "deno run --allow-write --allow-read --allow-env --allow-sys --allow-net --allow-run --allow-ffi npm:vite dev",
    "build": "deno run --allow-write npm:svelte-kit sync",
    "build:watch": "svelte-kit sync && pnpm package --watch",
    "preview": "deno run -A npm:vite preview",
    "package": "deno run -A npm:svelte-kit sync && npm:svelte-package && NODE_ENV=production postcss src/app.css -o dist/asha.css && publint",
    "prepublishOnly": "pnpm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "deno test",
    "storybook": "deno run --allow-write --allow-read --allow-env --allow-sys --allow-net --allow-run npm:storybook dev -p 6006",
    "build-storybook": "deno run -A --unstable npm:storybook build"
  },
  "imports": {
    "@storybook/builder-vite": "npm:@storybook/builder-vite@^8.2.4",
    "@storybook/svelte": "npm:@storybook/svelte@^8.2.3",
    "@storybook/sveltekit": "npm:@storybook/sveltekit@^8.2.3",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.5.18",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^3.1.1",
    "autoprefixer": "npm:autoprefixer@^10.4.19",
    "cssnano": "npm:cssnano@^7.0.4",
    "postcss": "npm:postcss@^8.4.39",
    "storybook": "npm:storybook@^8.2.3",
    "svelte": "npm:svelte@^5.0.0-next.165",
    "svelte-adapter-deno": "npm:svelte-adapter-deno@^0.9.0",
    "tailwindcss": "npm:tailwindcss@^3.4.5",
    "vite": "npm:vite@^5.3.3",
    "xstate": "npm:xstate@^5.15.0"
  },
  "exclude": ["dist/"]
}
