		"svelte-loader": "^3.2.4",
		"svelte-preprocess": "^6.0.3",
		"svelte2tsx": "^0.7.42",
		"tailwindcss": "^4.1.13",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.42.0",
		"vite": "^7.1.4",
