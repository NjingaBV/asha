{
	"name": "@njingabv/asha",
	"version": "0.2.0",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NjingaBV/asha.git"
	},
	"bugs": {
		"url": "https://github.com/NjingaBV/asha/issues"
	},
	"packageManager": "pnpm@8.6.12",
	"engines": {
		"pnpm": "^8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && NODE_ENV=production postcss src/app.css -o dist/asha.css && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"release": "changeset publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@babel/core": "^7.22.10",
		"@storybook/addon-actions": "^7.3.2",
		"@storybook/addon-essentials": "^7.3.2",
		"@storybook/addon-links": "^7.3.2",
		"@storybook/addon-styling": "^1.3.6",
		"@storybook/addon-svelte-csf": "^3.0.7",
		"@storybook/addon-viewport": "^7.3.2",
		"@storybook/svelte": "^7.3.2",
		"@storybook/sveltekit": "^7.3.2",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.6",
		"@sveltejs/package": "^2.2.1",
		"@sveltejs/vite-plugin-svelte": "^2.4.5",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@tsconfig/svelte": "^5.0.0",
		"@types/youtube": "^0.0.47",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"@xstate/cli": "^0.4.2",
		"@xstate/svelte": "^2.1.0",
		"@xstate/test": "^0.5.1",
		"autoprefixer": "^10.4.15",
		"babel-loader": "^9.1.3",
		"cssnano": "^6.0.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-storybook": "^0.6.13",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.28",
		"postcss-cli": "^10.1.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.3.2",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"svelte-loader": "^3.1.9",
		"svelte-preprocess": "^5.0.4",
		"svelte2tsx": "^0.6.20",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.2",
		"xstate": "^4.38.2"
	}
}
