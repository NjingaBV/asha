{
  "name": "@njingabv/asha",
  "version": "0.3.1",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NjingaBV/asha.git"
  },
  "bugs": {
    "url": "https://github.com/NjingaBV/asha/issues"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "pnpm": "^9.1.4"
  },
  "scripts": {
    "dev": "deno run -A --unstable npm:vite dev",
    "build": "svelte-kit sync && pnpm package",
    "build:watch": "svelte-kit sync && pnpm package --watch",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && NODE_ENV=production postcss src/app.css -o dist/asha.css && publint",
    "prepublishOnly": "pnpm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "changeset publish"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@chromatic-com/storybook": "^1.5.0",
    "@storybook/addon-actions": "^8.1.9",
    "@storybook/addon-essentials": "^8.1.9",
    "@storybook/addon-links": "^8.1.9",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/addon-svelte-csf": "^4.1.3",
    "@storybook/addon-viewport": "^8.1.9",
    "@storybook/svelte": "^8.1.9",
    "@storybook/sveltekit": "^8.1.9",
    "@sveltejs/adapter-auto": "^3.2.1",
    "@sveltejs/kit": "^2.5.10",
    "@sveltejs/package": "^2.3.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tsconfig/svelte": "^5.0.4",
    "@types/youtube": "^0.0.50",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@xstate/cli": "^0.5.17",
    "@xstate/svelte": "^3.0.3",
    "@xstate/test": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "cssnano": "^7.0.2",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.4",
    "publint": "^0.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.1.9",
    "svelte": "^5.0.0-next.165",
    "svelte-adapter-deno": "^0.9.0",
    "svelte-check": "^3.8.2",
    "svelte-loader": "^3.2.3",
    "svelte-preprocess": "^6.0.1",
    "svelte2tsx": "^0.7.9",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "xstate": "^5.14.0"
  }
}
